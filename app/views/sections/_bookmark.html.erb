<%= turbo_frame_tag content.id do %>
  <div class="book-content-bookmark-wrapper <%= bookmarked && "bookmarked" %> text-secondary">
    <% if bookmarked %>
      <i class="fa-solid fa-bookmark fa-lg"></i>
    <% else %>
      <i class="fa-regular fa-bookmark fa-lg"></i>
    <% end %>
  </div>
  <p>
    <%= content.bookmarks %>
  </p>
<% end %>